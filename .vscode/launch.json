    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Linux",
            "type": "cppdbg",
            "request": "launch",
            "program": "/home/bulu101/vmlinux",
            //"program": "/home/bulu101/vmlinux-4.1.39-56-debug",
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            //"miDebuggerPath": "/usr/local/bin/gdb",
            //"miDebuggerPath": "${workspaceFolder}/vmd",
            "MIMode": "gdb",
            "miDebuggerServerAddress": "localhost:8864"
        },
       {
        "name": "(gdb) Associa",
        "type": "cppdbg",
        "request": "attach",
        "program": "${workspaceFolder}/bin/test",
        "MIMode": "gdb",
        "setupCommands": [
            {
                "description": "Abilita la riformattazione per gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            },
            {
                "description":  "Imposta Versione Disassembly su Intel",
                "text": "-gdb-set disassembly-flavor intel",
                "ignoreFailures": true
            }
        ]
       },
       {
           "name": "(gdb) Launch",
           "type": "cppdbg",
           "request": "launch",
           "program": "${workspaceFolder}/bin/test",
           "args": ["/dev/rfm2g0"],
//           "args": ["/proc/lkmc_mmap"],
           "stopAtEntry": false,
           "cwd": "${workspaceFolder}",
           "environment": [],
           //"miDebuggerPath": "${workspaceFolder}/gdb",
           "externalConsole": false,
           "MIMode": "gdb",
           "setupCommands": [
               {
                   "description": "Enable pretty-printing for gdb",
                   "text": "-enable-pretty-printing",
                   "ignoreFailures": true
               }
           ]
       }
    ]
}